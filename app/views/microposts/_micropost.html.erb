<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user), micropost.user %>
  <span class="user"><%= link_to micropost.user_name, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>

  <% if micropost.image.attached? %>
    <%= image_tag micropost.image.variant resize_to_limit: [Settings.limit_image, Settings.limit_image] %>
  <% end %>
  <span class="timestamp">
    <%= t ".posted" %>
    <%= time_ago_in_words(micropost.created_at) %>
    <%= t ".ago" %>
    <% if current_user?(micropost.user) %>
      <%= link_to t(".delete"), micropost, method: :delete,
                                       data: { confirm: t(".sure") } %>
    <% end %>
  </span>
</li>
